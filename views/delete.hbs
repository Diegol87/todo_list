<div class="container m-6">
    <h1 class="title is-5">ELIMINAR</h1>
    <p>Quieres eliminar de la lista el id <strong>{{id}}</strong>?</p>

    <button class="button is-danger" onclick="eliminar()">Confirmar</button>
</div>


<script>
    const eliminar = () => fetch("/todos/{{id}}", { method: "delete" }).then(() => window.location.href = "/")
</script>